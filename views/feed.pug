extends ui_layout_no
  
block content

  
  -var cdn = "https://eatsnaplove.nyc3.cdn.digitaloceanspaces.com";
  -//var cdn = "";
  .computer.only.tablet.only.four.wide.column 
    

  #content.eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column(style='display: none;')
    //-.ui.active.dimmer.feed
      .ui.large.text.loader Loading
    //- Input for creating new post at top of feed
  
    each val in script
      
      
      .ui.fluid.card.dim()
        //- dimmer DIV for flagging
        .ui.dimmer.flag
              .content
                .center
                  h2.ui.inverted.icon.header
                    i.red.flag.icon
                    |  You&apos;ve flagged this!
                    h3.ui.inverted.header
                      span="The admins will review this post further. We are sorry you had this experience."
                      br
                        //- if else statement for the group user is in
                        if (user.group == "var9" || user.group == "var10" || user.group == "var11" || user.group == "var12")
                          //- do nothing
                        else if (user.group == "var5" || user.group == "var6" || user.group == "var7" || user.group == "var8")
                          //- medium qualtrics survey
                          iframe(src='https://ucmerced.az1.qualtrics.com/jfe/form/SV_dhW1v5ZpAeI1rP8' height='400px' width='500px')
                        else if (user.group == "var1" || user.group == "var2" || user.group == "var3" || user.group == "var4")
                          //- long qualtrics survey
                          iframe(src='https://ucmerced.az1.qualtrics.com/jfe/form/SV_6RykgAxZ0iHEKR8' height='400px' width='500px')
        //- Normal Base Post
        .content
          .right.floated.time.meta= (1547752372994 + val.time)
          |  
          a(href='#')
            if val.actor[namefilter] == "yes"
              img.ui.avatar.image(src=cdn+'/profile_pictures/'+val.actor.profile.picture)
            else
              img.ui.avatar.image(src=val.actor.profile.fakepic)
            span=val.actor.profile.name
        //-div(style="position: relative; z-index: 1;")
          img(src="image.png" style="position: absolute; z-index: 2;")
          span#overlay_text(style="position: relative; top: -10px; z-index: 3;") OVERLAY
        .image
          img.post(src=cdn+"/post_pictures/"+val.picture)
        .content
          .description=val.body
        if (user.group == "var3" || user.group == "var4" || user.group == "var7" || user.group == "var8" || user.group == "var11" || user.group == "var12")
            .three.ui.bottom.attached.icon.buttons
              .ui.reply.button(tabindex='0')
                i.reply.icon
                |  Reply
            if (user.group == "var3" || user.group == "var7" || user.group == "va11")
              .ui.flag.button(tabindex='0'
                              title=`Community Rules for EatSnap.Love
                              \n Before you get started, please review our community rules.
                              These rules help foster a friendly and fun community.
                              Please note that this is not a comprehensive list.
                              \n No SPAM (unless its in a can!) This is not the place to sell your services or promote your brand. SPAM will be deleted when found.
                              \n No Personal Attacks and Bullying Zero tolerance on this! EatSnap.Love is a place to to share our snaps and our love, not to tear each other down.
                              \n No Racism, sexism, and other discrimination. Attacking entire classes of people is just like attacking a single person: we will ban you for it.
                              \n No NSFW material. If you would not show your boss, do not show it here!`)
                i.flag.icon
                |  Flag
            else 
              .ui.flag.button(tabindex='0')
                i.flag.icon
                |  Flag
              if val.like
                .ui.labeled.button(tabindex='0')
                  .ui.red.like.button
                    i.heart.icon
                    |  Like
                  a.ui.basic.red.left.pointing.label=val.likes
              else
                .ui.labeled.button(tabindex='0')
                  .ui.like.button
                    i.heart.icon
                    |  Like
                  a.ui.basic.red.left.pointing.label.count=val.likes
          else
            .four.ui.bottom.attached.icon.buttons
              .ui.reply.button(tabindex='0')
                i.reply.icon
                |  Reply
            if (user.group == "var1" || user.group == "var5" || user.group == "var9")
              .ui.flag.button(tabindex='0'
                              title=`Community Rules for EatSnap.Love
                              \n Before you get started, please review our community rules.
                              These rules help foster a friendly and fun community.
                              Please note that this is not a comprehensive list.
                              \n No SPAM (unless its in a can!) This is not the place to sell your services or promote your brand. SPAM will be deleted when found.
                              \n No Personal Attacks and Bullying Zero tolerance on this! EatSnap.Love is a place to to share our snaps and our love, not to tear each other down.
                              \n No Racism, sexism, and other discrimination. Attacking entire classes of people is just like attacking a single person: we will ban you for it.
                              \n No NSFW material. If you would not show your boss, do not show it here!`)
                i.flag.icon
                |  Flag
            else
              .ui.flag.button(tabindex='0')
                i.flag.icon
                |  Flag
              if val.like
                .ui.labeled.button(tabindex='0')
                  .ui.red.like.button
                    i.heart.icon
                    |  Like
                  a.ui.basic.red.left.pointing.label=val.likes
              else
                .ui.labeled.button(tabindex='0')
                  .ui.like.button
                    i.heart.icon
                    |  Like
                  a.ui.basic.red.left.pointing.label.count=val.likes
              if val.dislike 
                .ui.labeled.button(tabindex='0')
                  .ui.red.dislike.button
                    i.frown.icon
                    |  Dislike
                  a.ui.basic.red.left.pointing.label=val.dislikes
              else
                .ui.labeled.button(tabindex='0')
                  .ui.dislike.button
                    i.frown.icon
                    |  Dislike
                  a.ui.basic.red.left.pointing.label.count=val.dislikes
        .extra.content
          .ui.fluid.left.labeled.right.icon.input
            .ui.label
              img.ui.avatar.image(src='/profile_pictures/genericphoto6.png', name="Nick Johnson")           
            input.newcomment(type='text', placeholder='Write a Comment')
            i.big.send.link.icon

    .ui.fluid.card
      .content
        .description
        |  End of Posts
